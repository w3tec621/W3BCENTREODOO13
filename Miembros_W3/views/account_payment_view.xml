<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- inherit detalle de documento de pago W3BCentre-->
        <record id="account_payment_view_form2_inh" model="ir.ui.view">
            <field name="name">account.payment.inherit.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="detalle_de_documento" string="Documento"/>
                <field name="numero_detalle_documento"/>
            </xpath>
            </field>
		</record>
    </data>
</odoo>